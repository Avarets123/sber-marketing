{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "infrastructure/database/prisma/**/*", "watchAssets": true
      },
      { "include": "**/*.hbs", "watchAssets": true }
    ]
  }
}
